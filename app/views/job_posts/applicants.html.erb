<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold text-center">Applicants for <%= @job_post.title %></h1>

  <% if @applications.any? %>
    <div class="mt-6">
      <% @applications.each do |application| %>
        <%= tag.div class: "relative border-b border-gray-100" do %>
          <%= link_to developer_path(application.developer), class: "bg-white hover:bg-blue-50 py-6 px-8 flex space-x-4 sm:space-x-8" do %>
            <div class="shrink-0">
              <%= render AvatarComponent.new(avatarable: application.developer, variant: :medium) %>
            </div>

            <div class="self-start flex-1 min-w-0 space-y-4">
              <div class="flex items-baseline">
                <h2 class="text-lg sm:text-xl font-medium text-blue-900 line-clamp-2 break-word" title="<%= application.developer.hero %>">
                  <%= application.developer.name %>
                </h2>

                <div class="text-right flex-1">
                  <span class="text-sm font-medium bg-gray-100 rounded-full px-4 py-1">
                    Status: <%= application.human_status %>
                  </span>
                </div>
              </div>

              <div class="space-y-2">
                <%= render Developers::BadgesComponent.new(application.developer) %>
                <%= render Developers::SpecialtiesComponent.new(application.developer.specialties) %>
              </div>

              <div class="text-sm sm:text-base text-blue-950 space-y-4">
                <p class="line-clamp-3 break-words"><%= application.developer.bio %></p>
              </div>
            </div>
          <% end %>

          <div class="flex justify-center space-x-4 mt-4">
            <%= form_with url: update_application_status_job_path(application.job_post, application_id: application.id, status: 'considered'), method: :post do |form| %>
              <%= form.submit "Considered", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
            <%= form_with url: update_application_status_job_path(application.job_post, application_id: application.id, status: 'other'), method: :post do |form| %>
              <%= form.submit "Other", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-gray-600 bg-gray-300 hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
            <% end %>
          </div>

        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center mt-6 text-gray-600">No applications yet.</p>
  <% end %>
</div>
