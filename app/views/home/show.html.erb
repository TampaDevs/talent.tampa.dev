<%= open_graph_tags title: t(".title_og"), turbo_native_title: t(".turbo_native_title"), description: t(".description_og") %>

<div class="mt-16 mx-auto max-w-7xl px-4 sm:mt-24">
  <div class="text-center">
    <h1 class="text-3xl tracking-tight font-extrabold sm:text-5xl md:text-6xl">
      <span class="block text-blue-950"><%= t(".title_1") %></span>
      <span class="block text-blue-800"><%= t(".title_2") %></span>
    </h1>
    <p class="mt-3 max-w-md mx-auto text-base text-blue-950 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      <%= t(".subtitle_1") %>
      <span><%= t(".subtitle_2") %></span>
      <span class="md:block"><%= t(".subtitle_3") %></span>
    </p>
    <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
      <div class="rounded-md shadow">
        <%= link_to t(".get_started"), new_role_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700 md:py-4 md:text-lg md:px-10" %>
      </div>
      <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
        <%= link_to t(".learn_more"), about_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 md:py-4 md:text-lg md:px-10" %>
      </div>
    </div>
  </div>
  <div class="mt-20 sm:mt-20">
    <iframe id="next-event-widget" src="https://events.api.tampa.dev/widget/next-event?groups=tampadevs" frameborder="0" scrolling="no"></iframe>
  </div>
</div>

<div class="max-w-5xl mx-auto mt-20 sm:mt-20">
  <div class="pb-5 px-4 lg:px-0 sm:flex sm:items-center sm:justify-between">
    <h2 class="text-lg leading-6 font-medium text-blue-900">
      <%= t(".developers_heading") %>
    </h2>
  </div>

  <div class="shadow overflow-hidden sm:rounded-md divide-y divide-gray-200">
    <%= render Developers::CardComponent.with_collection(@developers) %>
  </div>

  <div class="mt-8 mb-16 text-right mr-2 lg:mr-0">
    <%= link_to developers_path, class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <%= t(".more") %>
      <%= inline_svg_tag "icons/outline/arrow_right_circle.svg", class: "ml-3 -mr-1 h-5 2-5", aria_hidden: true %>
    <% end %>
  </div>
</div>
