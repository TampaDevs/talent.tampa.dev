<%= render Admin::ContainerComponent.new do %>
  <%= render Admin::ContentComponent.new do %>
    <%= render Admin::DescriptionListComponent.new(t(".title")) do |list| %>
      <% list.with_description t(".full_name") do %>
        <%= render Admin::BasicLinkComponent.new(@form.business.name, business_path(@form.business)) %>
        <br>
        <%= render Admin::EmailLinkComponent.new(@form.business.user.email) %>
      <% end %>
      <% list.with_description t(".billing_address"), simple_format(@form.billing_address) %>
      <% list.with_description t(".developer_name"), @form.developer_name %>
      <% list.with_description t(".position"), @form.position %>
      <% list.with_description t(".employment_type"), @form.employment_type.humanize %>
      <% list.with_description t(".salary"), number_to_currency(@form.annual_salary, precision: 0) %>
      <% list.with_description t(".start_date"), @form.start_date.to_formatted_s(:long) %>
      <% list.with_description t(".feedback"), @form.feedback, wide: true %>
    <% end %>
  <% end %>
<% end %>
