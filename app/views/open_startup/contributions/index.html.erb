<%= open_graph_tags title: t(".title"), description: t(".description") %>

<div class="bg-blue-50 max-w-5xl mx-auto pt-12 sm:pt-16">
  <div class="text-center px-4 sm:px-6 lg:px-8">
    <h2 class="sm:flex mx-auto justify-center text-3xl font-extrabold text-blue-900 sm:text-4xl">
      <%= link_to t(".open_startup"), open_startup_root_path, class: "text-blue-950 hover:text-blue-950" %>
      <div class="flex items-center">
        <%= inline_svg_tag "icons/solid/chevron_right.svg", class: "hidden sm:block flex-shrink-0 h-8 w-8 text-blue-400", aria_hidden: true %>
        <span class="w-full"><%= t(".contributions") %></span>
      </div>
    </h2>
    <p class="mt-3 text-xl max-w-2xl mx-auto text-blue-950 sm:mt-4"><%= t(".description") %></p>
  </div>

  <div class="mt-10 pb-12 sm:pb-16">
    <div class="relative">
      <div class="absolute inset-0 h-1/2 bg-blue-50"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-xl mx-auto">
          <dl class="space-y-6 sm:space-y-0 sm:grid sm:grid-cols-2 sm:space-x-6">
            <div class="flex flex-col border-b border-gray-100 p-6 text-center bg-white rounded-lg overflow-hidden shadow-lg">
              <dt class="order-2 mt-2 text-lg leading-6 font-medium text-blue-950">
                <%= t(".to_communities") %>
              </dt>
              <dd class="order-1 text-5xl font-extrabold text-blue-950">
                <%= number_to_currency(@to_communities, precision: 0) %>
              </dd>
            </div>
            <%= link_to "https://climate.stripe.com/nxdibE", target: "_blank", class: "relative flex flex-col border-b border-gray-100 p-6 text-center bg-white rounded-lg overflow-hidden shadow-lg group hover:bg-blue-50" do %>
              <%= inline_svg_tag "icons/solid/external_link.svg", class: "w-5 h-5 text-blue-400 absolute top-0 right-0 mt-2 mr-3 group-hover:text-blue-950", title: t(".external_link") %>
              <dt class="order-2 mt-2 text-lg leading-6 font-medium text-blue-950">
                <%= t(".to_co2_removal") %>
              </dt>
              <dd class="order-1 text-5xl font-extrabold text-blue-950">
                <%= number_to_currency(@to_co2_removal, precision: 0) %>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col max-w-3xl w-full mx-auto">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-blue-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= t(".date") %>
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= t(".recipient") %>
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= t(".amount") %>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @contributions.each do |contribution| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-900">
                    <%# i18n-tasks-use t('date.formats.month_year')%>
                    <%= l(contribution.occurred_on, format: :month_year) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-950">
                    <%= render LinkableTextComponent.new(contribution.description, url: contribution.url, target: "_blank", class: "underline") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-blue-950">
                    <%= number_to_currency(contribution.amount, precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
