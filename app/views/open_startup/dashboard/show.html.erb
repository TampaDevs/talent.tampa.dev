<%= open_graph_tags title: t(".title"), description: t(".description") %>

<div class="bg-blue-50 max-w-5xl mx-auto pt-12 sm:pt-16">
  <div class="text-center px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-blue-900 sm:text-4xl"><%= t(".title") %></h2>
    <p class="mt-3 text-xl text-blue-950 sm:mt-4"><%= t(".description") %></p>
  </div>

  <div class="mt-10 pb-12 sm:pb-16">
    <div class="relative">
      <div class="absolute inset-0 h-1/2 bg-blue-50"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <dl class="space-y-6 sm:space-y-0 sm:grid sm:grid-cols-3 sm:space-x-6">
            <%= link_to open_startup_revenue_index_path, class: "relative flex flex-col border-b border-gray-100 p-6 text-center bg-white rounded-lg overflow-hidden shadow-lg group hover:bg-blue-50" do %>
              <%= inline_svg_tag "icons/solid/external_link.svg", class: "w-5 h-5 text-blue-400 absolute top-0 right-0 mt-2 mr-3 group-hover:text-blue-950", title: t(".external_link") %>
              <dt class="order-2 mt-2 text-lg leading-6 font-medium text-blue-950">
                <%= t(".mrr") %>
              </dt>
              <dd class="order-1 text-5xl font-extrabold text-blue-950">
                <%= number_to_currency(@metric.mrr, precision: 0) if @metric.present? %>
              </dd>
            <% end %>
            <%= link_to open_startup_contributions_path, class: "relative flex flex-col border-b border-gray-100 p-6 text-center bg-white rounded-lg overflow-hidden shadow-lg group hover:bg-blue-50" do %>
              <%= inline_svg_tag "icons/solid/external_link.svg", class: "w-5 h-5 text-blue-400 absolute top-0 right-0 mt-2 mr-3 group-hover:text-blue-950", title: t(".external_link") %>
              <dt class="order-2 mt-2 text-lg leading-6 font-medium text-blue-950">
                <%= t(".contributions") %>
              </dt>
              <dd class="order-1 text-5xl font-extrabold text-blue-950">
                <%= number_to_currency(@contributions, precision: 0) %>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col max-w-3xl w-full mx-auto">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-blue-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= t(".date") %>
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= link_to t(".revenue"), open_startup_revenue_index_path, class: "underline" %>
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= link_to t(".expenses"), open_startup_expenses_path, class: "underline" %>
                </th>
                <th scope="col" class="py-3 text-right text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= link_to t(".contributions"), open_startup_contributions_path, class: "underline" %>
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-blue-950 uppercase tracking-wider">
                  <%= t(".profit") %>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @monthly_balances.each do |monthly_balance| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-900">
                    <%# i18n-tasks-use t('date.formats.month_year')%>
                    <%= l(monthly_balance.occurred_on, format: :month_year) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-blue-950">
                    <%= number_to_currency(monthly_balance.revenue, precision: 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-blue-950">
                    <%= number_to_currency(monthly_balance.expenses, precision: 0) %>
                  </td>
                  <td class="py-4 whitespace-nowrap text-sm text-right text-blue-950">
                    <%= number_to_currency(monthly_balance.contributions, precision: 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-blue-950">
                    <%= number_to_currency(monthly_balance.profit, precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
