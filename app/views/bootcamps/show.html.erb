<%= open_graph_tags title: t(".title_og"), description: t(".description") %>

<div class="overflow-hidden max-w-5xl mx-auto">
  <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="mx-auto text-base max-w-prose lg:grid lg:grid-cols-2 lg:gap-8 lg:max-w-none">
      <div>
        <h2 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-blue-900 sm:text-4xl"><%= t(".title") %></h2>
      </div>
    </div>

    <div class="mt-8 lg:grid lg:grid-cols-5 lg:gap-8">
      <div class="relative lg:row-start-1 lg:col-start-4 lg:col-span-2">
        <div class="relative text-base mx-auto max-w-prose lg:max-w-none">
          <figure>
            <div class="aspect-w-3 aspect-h-2 lg:aspect-none">
              <%= image_tag "codeboxx.png", class: "rounded-lg shadow-lg object-cover object-top", alt: "CodeBoxx Logo" %>
            </div>
            <figcaption class="mt-3 text-center text-sm text-blue-950">
                <a href="https://www.academy.codeboxx.com/?utm_source=td_talent&utm_medium=organic&utm_campaign=web" class="underline">CodeBoxx Academy</a><%= t(".caption") %>
            </figcaption>
          </figure>
        </div>
      </div>

      <div class="mt-8 lg:mt-0 lg:col-span-3">

        <div class="prose prose-lg prose-gray text-blue-950 max-w-prose mx-auto lg:max-w-none">
          <%= render MarkdownComponent.bootcamps_hero %>

          <div class="inline-flex rounded-md shadow">
            <a href="https://www.academy.codeboxx.com/?utm_source=td_talent&utm_medium=organic&utm_campaign=web" class="bg-blue-500 border border-transparent rounded-md py-3 px-5 inline-flex items-center justify-center text-base font-medium text-white hover:bg-blue-700 no-underline"><%= t(".cta") %></a>
          </div>
        </div>

        <div class="mt-8 prose prose-gray text-blue-950 mx-auto lg:max-w-none lg:row-start-1 lg:col-start-1">
          <%= render MarkdownComponent.bootcamps_body %>
        </div>
      </div>
    </div>

    <% if turbo_native_app? %>
      <nav class="-mx-5 mt-12 flex flex-wrap justify-center">
        <div class="px-5 py-2">
          <%= link_to "Privacy policy", policies_privacy_path, class: "text-base text-blue-950 hover:text-blue-900" %>
        </div>

        <div class="px-5 py-2">
          <%= link_to "Terms and conditions", policies_terms_path, class: "text-base text-blue-950 hover:text-blue-900" %>
        </div>
      </nav>
    <% end %>
  </div>
</div>
