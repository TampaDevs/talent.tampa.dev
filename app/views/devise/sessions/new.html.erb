<%= render "shared/error_messages", resource: resource %>

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-blue-900">
      <%= t("sessions.sign_in_hero") %>
    </h2>

    <%= render "devise/shared/signup_link" if devise_mapping.registerable? %>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white p-4 pb-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-6"} do |form| %>
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-blue-950" %>
          <div class="mt-1">
            <%= form.email_field :email, autocomplete: "email", required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-gray-500 sm:text-sm", autofocus: true, tabindex: "1" %>
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= form.label :password, class: "block text-sm font-medium text-blue-950" %>
            <%= render "devise/shared/forgot_link" if devise_mapping.recoverable? %>
          </div>

          <div class="mt-1">
            <%= form.password_field :password, autocomplete: "current-password", required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-gray-500 sm:text-sm", tabindex: "2" %>
          </div>
        </div>

        <div>
          <%= form.button t("sessions.sign_in"), class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", tabindex: "4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
