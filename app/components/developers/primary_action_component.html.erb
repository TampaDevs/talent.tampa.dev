<% if owner? %>
  <div class="flex space-x-4 mt-4 md:mt-0">
    <%= link_to edit_developer_path(@developer), class: "shrink-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <%= inline_svg_tag "icons/solid/pencil.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
      <%= t("developers.show.edit") %>
    <% end %>

    <%= link_to new_developer_public_profile_path(@developer), data: {"turbo-frame": "modal"}, class: "shrink-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <%= inline_svg_tag "icons/solid/share.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
      <%= t("developers.show.share") %>
    <% end %>
  </div>
<% elsif conversation.present? %>
  <%= link_to conversation_path(conversation), class: "shrink-0 mt-4 md:mt-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
    <%= inline_svg_tag "icons/solid/mail.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
    <%= t("developers.show.message") %>
  <% end %>
<% elsif @developer.valid_public_profile_access?(@public_key) %>
  <%= mail_to @developer.user.email, rel: "nofollow", class: "shrink-0 mt-4 md:mt-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
    <%= inline_svg_tag "icons/solid/briefcase.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
    <%= t("developers.show.hire") %>
  <% end %>
<% else %>
  <%= link_to new_developer_message_path(@developer), rel: "nofollow", class: "shrink-0 mt-4 md:mt-0 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-blue-950 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
    <%= inline_svg_tag "icons/solid/briefcase.svg", class: "-ml-1 mr-3 h-5 w-5", aria_hidden: true %>
    <%= t("developers.show.hire") %>
  <% end %>
<% end %>
