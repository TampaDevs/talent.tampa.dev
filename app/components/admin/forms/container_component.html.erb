<div class="max-w-lg mx-auto pt-10 pb-12 px-4 lg:pb-16">
  <div class="space-y-6">
    <div class="flex">
      <div class="flex-grow">
        <h1 class="text-lg leading-6 font-medium text-blue-900"><%= title %></h1>
        <% if description.present? %>
          <p class="mt-1 text-sm text-blue-950"><%= description %></p>
        <% end %>
      </div>

      <div class="flex-shrink space-x-2">
        <%= aside %>
      </div>
    </div>

    <%= content %>

    <div class="flex justify-end">
      <%= button_group %>
    </div>
  </div>
</div>
