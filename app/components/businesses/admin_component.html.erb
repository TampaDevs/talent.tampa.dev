<h2 class="text-sm font-bold text-blue-900"><%= t(".title") %></h2>

<span class="relative z-0 inline-flex shadow-sm rounded-md mt-3">
  <%= button_to admin_business_invisiblizes_path(business), method: :post, rel: "nofollow", class: "relative inline-flex items-center px-4 py-2 rounded-md border border-gray-300 bg-white text-sm font-medium text-blue-950 hover:bg-blue-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-gray-500", form: {data: {turbo_confirm: business.invisible? ? t(".confirm_make_visible") : t(".confirm_make_invisible")}} do %>
    <% if business.invisible? %>
      <%= inline_svg_tag "icons/solid/eye_on.svg", class: "-ml-1 mr-2 h-5 w-5 text-blue-400", aria_hidden: true %>
      <%= t(".make_visible") %>
    <% else %>
      <%= inline_svg_tag "icons/solid/eye_off.svg", class: "-ml-1 mr-2 h-5 w-5 text-blue-400", aria_hidden: true %>
      <%= t(".invisiblize") %>
    <% end %>
  <% end %>
</span>

<%= link_to admin_business_conversations_path(business), class: "relative inline-flex items-center px-4 py-2 bg-white text-sm font-medium text-blue-900 hover:underline" do %>
  <%= inline_svg_tag "icons/solid/chat_bubble_left_right.svg", class: "-ml-1 mr-2 h-5 w-5 text-blue-400", aria_hidden: true %>
  <%= t(".conversations") %>
<% end %>

<div class="mt-5 md:mt-0 md:col-span-2">
  <div class="space-y-6">
    <div class="sm:col-span-3">
      <div class="mt-5">
        <h2 class="text-sm font-bold text-blue-900">Contact Details</h2>
        <p class="block text-sm font-medium text-blue-950"><%= mail_to business.user.email %></p>
        <p class="block text-sm font-medium text-blue-950"><%= phone_to business.phone_number, number_to_phone(business.phone_number, pattern: /(\d{1,3})(\d{3})(\d{4})$/, area_code: true) %></p>
      </div>
    </div>
  </div>
</div>
